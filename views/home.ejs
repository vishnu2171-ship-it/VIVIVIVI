  <div class="all-blogs">
    <h2>All Blogs</h2>
  </div>
          <div class="body">
             <% let a = 0 %>
            <div class="container">
              <% if(blogs.length > 0) { %>
                <%blogs.forEach(blog=>{ %> 
                  <% a++ %>
              <div class="card">
                <div class="imgbx">
                  <p class="number">Blog <%= a %></p>
                  <img src="pixel.jpeg">
                </div>
                <div class="owner">
                 <p id="blogOwner" class="blog-owner"> By <%= blog.name %></p>
                </div>
                <div class="content">
                  
                 
                   <a class="single"  href="/blogs/<%= blog._id %> " >
                   <h4 id="blogTitle"><%= blog.title%></h4> </a>
                   <p id="blogSnippet"><%= blog.snippet%> </p>
                   <p id="createdAt"><%= blog.createdAt%> </p>
                 
                  
                </div>
              </div>
              <%})%>
                  <%}else{%>
                 <p id="no-blogs">No Blogs to display ....please Add blogs</p>
                  <%}%>
            </div>
          </div>









